<link rel="stylesheet" href="/cssm/login.min.css" />

<div class="mainWrap with_sidebar sideBarRight">
  <div class="main">
    <!-- Content -->
    <div class="content">
      <div class="container container-boxes">
        <div class="row">
          <div class="col-sm-5">
            <%- include('../elements/social_login') %>
          </div>
          <div class="col-sm-6" style="width: 5%;">
            <div class="vl"></div>
          </div>

          <div class="col-sm-5">
            <div class="box white-bg">
              <h5>Login</h5>
              <div class="sep red"></div>
              <div class="margin-1"></div>
              <form
                id="contact_form"
                action="/login"
                class="no-bottom"
                method="post"
                novalidate
              >
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <label for="email" class="sr-only">Email</label>
                <input
                  type="email"
                  class="underline"
                  name="email"
                  id="email"
                  placeholder="Your email..."
                  required
                />

                <label for="password" class="sr-only">Password</label>
                <input
                  type="password"
                  class="underline"
                  name="password"
                  id="password"
                  placeholder="Your password..."
                  required
                />

                <div
                  class="form-row place-order"
                  style="float: left; margin-top: 20px;"
                >
                  <a href="/forgot" style="font-size: 14px;"
                    >Forgot Password?</a
                  >
                </div>
                <div
                  class="form-row place-order"
                  style="float: right; margin-top: 20px; font-size: 16px;"
                >
                  <input
                    type="submit"
                    class="ui primary button"
                    name="login"
                    id="login"
                    value="Login"
                    data-value="Login"
                  />
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
